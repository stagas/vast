{
  "targets": {
    "debug": {
      "outFile": "./as/build/assembly.wasm",
      "textFile": "./as/build/assembly.wat",
      "sourceMap": true,
      "debug": false,
      "noAssert": true
    },
    "release": {
      "outFile": "./as/build/assembly.wasm",
      "textFile": "./as/build/assembly.wat",
      "sourceMap": true,
      "debug": false,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": true
    }
  },
  "options": {
    "enable": [
      "simd",
      "relaxed-simd",
      "threads"
    ],
    "initialMemory": 10000,
    "maximumMemory": 10000,
    "bindings": "raw",
    "runtime": "incremental",
    "exportRuntime": true
  }
}
